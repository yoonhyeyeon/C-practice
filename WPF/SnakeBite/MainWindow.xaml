<Window x:Class="SnakeBite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeBite"
        mc:Ignorable="d"
        Title="SnakeBite" Height="350" Width="525">
    <Grid>
        <Image Source="tulip.jpg" Stretch="Fill"></Image>
        <TextBlock Margin="20,20" Foreground="#FFD2BCFF" FontSize="15">SnakeBite</TextBlock>
        <TextBlock Margin="20,35" Foreground="#FFD2BCFF" FontSize="15">Eat 25 Eggs using Arrow Keys</TextBlock>
        <TextBlock Margin="20,50" Foreground="#FFD2BCFF" FontSize="15">Press ESC to pause while playing</TextBlock>
        <Button Content="Play" Name="button1" Width="100" Height="40" HorizontalAlignment="Left" Margin="120,200,0,0" FontSize="15" Click="button1_Click"></Button>
        <Button Content="Quit" Name="button2" Width="100" Height="40" HorizontalAlignment="Left" Margin="300,200,0,0" FontSize="15" Click="button2_Click"></Button>
    </Grid>
</Window>
