<Window x:Class="A_Blinker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A_Blinker"
        mc:Ignorable="d"
        Title="Blinker" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="btnGreen" Margin="40,40,40,40" Background="#FF00F3FF" Click="btnGreen_Click"/>
        <Button Name="btnRed" Grid.Column="1" Margin="40" Background="#FFFF5C5C" Click="btnRed_Click"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" Text="Start Blinking !" FontSize="20"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" Text="Stop Blinking !" FontSize="20"/>
    </Grid>
</Window>
